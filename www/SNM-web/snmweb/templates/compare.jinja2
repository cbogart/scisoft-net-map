{% extends "base.jinja2" %}
{% block title %}Application details{% endblock %}
{% block content_title  %}Compare{% endblock %}

{% block head %}
  {{ super() }}
  {#You can include your specific css here#}
{% endblock %}

{% block js %}
  {#  You can add page-specific js here #}
{% endblock %}


{% block content %}

  <div class="col-md-3">
    <div class="panel panel-default">
      <div class="panel-heading">Choose property</div>
      <div class="panel-body">
        <button type="button" class="btn btn-default
        btn-block">Average runtime </button>
        <button type="button" class="btn btn-primary btn-block">Usage over time</button>
        <button type="button" class="btn btn-default btn-block">Users over time</button>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">Legend</div>
      <div class="panel-body">
        <div class="app-tile">
          <a style="background-color: blue;" href="#x" class="thumbnail">Euler</a>
        </div>
        <div class="app-tile">
          <a style="background-color: purple;" href="#x" class="thumbnail">Freemat</a>
        </div>
        <div class="app-tile">
          <a style="background-color: orange;" href="#x" class="thumbnail">Maxima</a>
        </div>
        <div class="app-tile">
          <a style="background-color: magenta;" href="#x" class="thumbnail">PARI/GP</a>
        </div>
        <div class="app-tile">
          <a href="#x" class="app-tile-add thumbnail">Add to comparison <span class="glyphicon glyphicon-plus"></span></a>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-body">
        <img class="viz_100percent" src="{{request.static_url('snmweb:static/img/sample-line-chart.png')}}">
        <div class="btn-group">
          <button type="button" class="btn btn-default">Day</button>
          <button type="button" class="btn btn-default">Week</button>
          <button type="button" class="btn active btn-default">Month</button>
        </div>
        &nbsp&nbsp&nbsp
        <div class="btn-group">
          <button type="button" class="btn btn-default">From: October 2013</button>
          <button type="button" class="btn btn-default">To: April 2014</button>
        </div>
        &nbsp&nbsp&nbsp
        <div class="btn-group">
          <button type="button" class="btn btn-default">Smoothness</button>
          <button type="button" class="btn active btn-default">None</button>
          <button type="button" class="btn btn-default">3</button>
          <button type="button" class="btn btn-default">5</button>
          <button type="button" class="btn btn-default">7</button>
        </div>
      </div>
    </div>
  </div>

{% endblock %}
