{% extends "base.jinja2" %}
{% block title %}Application details{% endblock %}
{% block content_title  %}Overview{% endblock %}

{% block head %}
  {{ super() }}
  {#You can include your specific css here#}
{% endblock %}

{% block js %}
  {#  You can add page-specific js here #}
{% endblock %}


{% block content %}

  <div class="col-md-12">
    <div class="row">
      <div class="col-md-7">
        <h1>Euler <small>version 2.5</small></h1>
      </div>
      <div class="col-md-5" id="app-search">
        <div>
          <input type="checkbox" />
          <span>Add to compare list&nbsp;&nbsp;&nbsp;</span>
          <button type="submit" class="btn btn-default">Compare</button>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <div class="panel panel-default">
          <div class="panel-heading">
            <img src="{{request.static_url('snmweb:static/img/euler.png')}}" />
          </div>
          <div class="panel-body">
            <button type="button" class="btn btn-default btn-block"><a href="application.html">App profile</a></button>
            <button type="button" class="btn btn-default btn-block">Version history</button>
            <button type="button" class="btn btn-default btn-block">Used with</button>
            <button type="button" class="btn btn-primary btn-block">Usage over time</button>
            <button type="button" class="btn btn-default btn-block">Operating systems</button>
          </div>
        </div>
      </div>

      <div class="col-md-9">
        <div class="panel panel-default">
          <div class="panel-body">
            <img class="viz_100percent" src="{{request.static_url('snmweb:static/img/sample-line-chart.png')}}">
            <div class="btn-group">
              <button type="button" class="btn btn-default">Day</button>
              <button type="button" class="btn btn-default">Week</button>
              <button type="button" class="btn active btn-default">Month</button>
            </div>
            &nbsp&nbsp&nbsp
            <div class="btn-group">
              <button type="button" class="btn btn-default">From: October 2013</button>
              <button type="button" class="btn btn-default">To: April 2014</button>
            </div>
            &nbsp&nbsp&nbsp
            <div class="btn-group">
              <button type="button" class="btn btn-default">Smoothness</button>
              <button type="button" class="btn active btn-default">None</button>
              <button type="button" class="btn btn-default">3</button>
              <button type="button" class="btn btn-default">5</button>
              <button type="button" class="btn btn-default">7</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
{% endblock %}
