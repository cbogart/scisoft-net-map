{% extends "base.jinja2" %}
{% block title %}Browse applications{% endblock %}
{% block content_title  %}<h1>Browse applications</h1>{% endblock %}

{% block head %}
  {{ super() }}
  <link href="{{request.static_url('snmweb:static/css/browse.css')}}" rel="stylesheet">
{% endblock %}

{% block js %}
  {{ super() }}
  <script>
    $(".btn").each(function() {
        $(this).removeClass("active");
    });

    var order = SNM.getParameterByName("order");
    $("#order-input").val(order);
    console.log(order.charAt(0));
    if (order.charAt(0) == "-") {
        console.log("Hi");
        order = order.substring(1, order.length);
        console.log(order);
    }
    $("#order-" + order).addClass("active");

    var query = SNM.getParameterByName("query");
    $("#query-input").val(query);
  </script>
{% endblock %}

{% block content %}
  <div id="applications" class="col-md-12">
    <div id="sort-by-panel" style="float:left">
      <div class="btn-group">
        <a id="order-usage" class="btn btn-default active" href="{{request.route_url('browse', _query={'order': '-usage'})}}">Most used first</a>
        <a id="order-trend" class="btn btn-default" href="{{request.route_url('browse', _query={'order': '-trend'})}}">Trending first</a>
        <a id="order-title" class="btn btn-default" href="{{request.route_url('browse', _query={'order': 'title'})}}">Alphabetically</a>
      </div>
    </div>    
    <form class="form-group">
      <div id="search" class="input-group" style="float: right">
        <input id="query-input" name="query" type="text" class="form-control">
        <span class="input-group-btn">
          <button class="btn btn-default" type="button" style="margin-left: -5px">Search</button>
        </span>
        <input name="order" type="hidden" id="order-input" />
      </div>
    </form>
    
    <div style="clear: both"></div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 >Applications</h3>
      </div>
      <div class="panel-body">
        <table class="table table-striped table-hover">
          {% for app in apps %}
            <tr>
              <td>
                <img src="{{request.static_url('snmweb:static/img/' + app.image)}}"
                     class="app-image" />
              </td>
              <td>
                <div class="row">
                  <div class="col-md-9">
                    <h3>
                      <a href="{{request.route_url('application', name=app.title)}}">
                        {{app.title}}
                      </a>
                    </h3>
                    <div class="app-extra-info">
                        <a href="#" class="snm-tooltip" title="Number of runs from 2012-04-09 to 2013-01-27">Usage:</a><span> {{app.usage}}; </span>
                        <a href="#" class="snm-tooltip" title="Number of runs for the last 60 days">Usage trend:</a><span> {{app.usage_trend}}</span>
                        <a href="#" class="snm-tooltip" title="Number of users from 2012-04-09 to 2013-01-27">Users:</a><span> {{app.users}}</span>
                        <a href="#" class="snm-tooltip" title="Number of users for the last 60 days">Users trend:</a><span> {{app.users_trend}}</span>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <button data-id="{{ app.id }}" class="change btn btn-default change pull-right">Compare</button>
                  </div>
                </div>
                <p>
                  {{ app.short_description }}
                </p>
              </td>
            </tr>
          {% endfor %}
        </table>
      </div>
    </div>
  </div>

{% endblock %}
